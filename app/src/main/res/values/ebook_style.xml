<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--颜色-->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>

    <!--EBook主题-->
    <style name="EBook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--textInputLayout-->
    <style name="EBook.textInputLayout" parent="EBook">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="EBook.button" parent="EBook">
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!-- 圆形图片 -->
    <style name="EBook.circleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--item label-->
    <style name="EBook.itemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EBook.MaterialToolbar">
        <item name="android:background">@color/ebook_primary</item>
        <item name="titleTextColor">@color/ebook_onPrimary</item>
    </style>
</resources>