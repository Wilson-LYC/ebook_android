<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:text="公式E典通"
        android:textColor="@color/ebook_black"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/login_title"
        tools:layout_editor_absoluteX="1dp">

        <EditText
            android:id="@+id/login_input_email"
            style="@style/Ebook.input"
            android:background="@drawable/ebook_input"
            android:ems="10"
            android:hint="邮箱"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_captcha"
                style="@style/Ebook.input"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ebook_input"
                android:ems="10"
                android:hint="验证码"
                android:inputType="text" />

            <Button
                android:id="@+id/login_get_captcha"
                style="@style/Ebook.button.primary"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:onClick="onGetCaptchClick"
                android:text="获取验证码" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/login_login"
            style="@style/Ebook.button.primary"
            android:layout_width="match_parent"
            android:onClick="onLoginClick"
            android:text="登录" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="忘记密码"
        android:textColor="@color/ebook_grey_6"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>