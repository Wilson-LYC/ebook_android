                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/common_function_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Image 1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/common_function_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Image 1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/common_function_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Image 1" />
                </LinearLayout>
            </GridLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>


            <!--精选文章部分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/weekly_article"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical|start"
                    android:text="@string/weekly_article"
                    android:textSize="30dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/article_title1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center_horizontal|start"
                        android:text="article_title1"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/article1"
                            android:layout_width="150dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:text="文章1内容........"
                            android:textSize="13dp" />

                        <ImageView
                            android:id="@+id/article_image1"
                            android:layout_width="30dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/common_function_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_like1"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <Button
                            android:id="@+id/btn_comment1"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></Space>


                <!--第二篇文章-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/article_title2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center_horizontal|start"
                        android:text="article_title1"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/article2"
                            android:layout_width="150dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:text="文章2内容........"
                            android:textSize="13dp" />

                        <ImageView
                            android:id="@+id/article_image2"
                            android:layout_width="30dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:src="@drawable/common_function_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_like2"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <Button
                            android:id="@+id/btn_comment2"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>